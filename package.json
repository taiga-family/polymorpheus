{
    "name": "ng-polymorpheus",
    "version": "5.0.0",
    "private": true,
    "description": "This is a small library for customizing components appearance",
    "keywords": [
        "angular",
        "ng",
        "template",
        "polymorph",
        "component",
        "function",
        "context",
        "ng-template",
        "TemplateRef",
        "ngTemplateOutlet",
        "ngComponentOutlet"
    ],
    "homepage": "https://github.com/taiga-family/ng-polymorpheus#README",
    "bugs": "https://github.com/taiga-family/ng-polymorpheus/issues",
    "repository": {
        "type": "git",
        "url": "https://github.com/taiga-family/ng-polymorpheus"
    },
    "license": "Apache-2.0",
    "author": {
        "name": "Alex Inkin",
        "email": "alexander@inkin.ru"
    },
    "contributors": [
        {
            "name": "Roman Sedov",
            "email": "79601794011@ya.ru",
            "url": "http://marsibarsi.me/"
        }
    ],
    "workspaces": [
        "projects/*"
    ],
    "scripts": {
        "build": "nx build demo",
        "build:ssr": "nx build --prod && nx run demo:server:production",
        "cspell": "cspell --relative --no-progress --dot --gitignore .",
        "dev:ssr": "nx run demo:serve-ssr",
        "lint": "eslint .",
        "prepare": "husky",
        "prerender": "nx run demo:prerender",
        "prettier": "prettier !package-lock.json !CHANGELOG.md .  --ignore-path .gitignore",
        "release": "npx syncer && npx nx publish ng-polymorpheus",
        "start": "nx serve demo",
        "stylelint": "stylelint '**/*.{less,css}'",
        "test": "nx test ng-polymorpheus",
        "typecheck": "tsc --noEmit --skipLibCheck"
    },
    "commitlint": {
        "extends": [
            "@taiga-ui/commitlint-config"
        ]
    },
    "lint-staged": {
        "*.less": [
            "stylelint --fix"
        ],
        "*.{js,ts,html}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{svg,yml,md,less,json}": [
            "prettier --write"
        ]
    },
    "browserslist": [
        "extends @taiga-ui/browserslist-config"
    ],
    "prettier": "@taiga-ui/prettier-config",
    "stylelint": {
        "extends": [
            "@taiga-ui/stylelint-config"
        ]
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "19.2.19",
        "@angular-devkit/core": "19.2.19",
        "@angular-devkit/schematics": "19.2.19",
        "@angular/animations": "19.2.18",
        "@angular/build": "19.2.19",
        "@angular/cdk": "19.2.19",
        "@angular/cli": "19.2.19",
        "@angular/common": "19.2.18",
        "@angular/compiler": "19.2.18",
        "@angular/compiler-cli": "19.2.18",
        "@angular/core": "19.2.18",
        "@angular/forms": "19.2.18",
        "@angular/language-service": "19.2.18",
        "@angular/platform-browser": "19.2.18",
        "@angular/platform-browser-dynamic": "19.2.18",
        "@angular/platform-server": "19.2.18",
        "@angular/router": "19.2.18",
        "@angular/ssr": "19.2.19",
        "@ng-web-apis/common": "4.14.0",
        "@ng-web-apis/universal": "4.14.0",
        "@nx/angular": "21.6.10",
        "@nx/jest": "21.6.10",
        "@nx/workspace": "21.6.10",
        "@schematics/angular": "19.2.19",
        "@swc/helpers": "0.5.19",
        "@taiga-ui/configs": "0.406.0",
        "@taiga-ui/dompurify": "4.1.11",
        "@taiga-ui/syncer": "0.406.0",
        "@types/estree": "1.0.8",
        "@types/express": "5.0.6",
        "@types/node": "24.10.11",
        "express": "4.22.1",
        "highlight.js": "11.11.1",
        "husky": "9.1.7",
        "less": "4.5.1",
        "ng-packagr": "19.2.2",
        "ngx-highlightjs": "14.0.1",
        "nx": "21.6.10",
        "rxjs": "7.8.2",
        "ts-node": "10.9.2",
        "typescript": "5.7.3",
        "webpack": "5.105.2"
    },
    "syncer": {
        "includePaths": [
            "./projects",
            "./package-lock.json"
        ],
        "matchPackageNames": [
            "@taiga-ui/polymorpheus",
            "ng-polymorpheus"
        ]
    }
}
